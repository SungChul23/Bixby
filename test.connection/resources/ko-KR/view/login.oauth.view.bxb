result-view {
  match: LoginResponse (this)

  message {
    template ("#{value(loginMessage)}") {  
      speech ("#{value(loginMessage)}")
    }
  }

  render {
    layout {
      section {
        content {
          if (value(loginUrl) != "") {  // ✅ `loginUrl`이 빈 문자열이 아닐 때만 버튼 표시
            attribution-link {
              label ("로그인 페이지로 이동")
              url ("#{value(loginUrl)}")
            }
          }
        }
      }
    }
  }
}
