result-view {
  match: DeviceControlResult (controlResult)

  message {
    template ("기기 상태 변경에 성공했어요.")
  }

  render {
    layout {
      section {
        title ("✅기기 제어 결과")
        content {
          paragraph ("#{value(controlResult.statusMessage)}") // ✅ 기기 제어 결과 메시지 출력
        }
      }
    }
  }
  

  conversation-drivers {
    conversation-driver {
      template ("전기밥솥 켜줘")
    }
    conversation-driver {
      template ("컴퓨터 본체 켜줘")
    }
    conversation-driver {
      template ("드라이기 꺼줘")
    }
    conversation-driver {
      template ("모니터 꺼줘")
    }
  }
}
