result-view {
  match: DeviceControlResult (controlResult)
  message {
    template ("🔌플러그 제어 결과를 확인해 보세요🔌") {
      speech ("플러그 제어 결과를 확인해 보세요.") // statusMessage는 이제 text 타입이므로 그대로 사용 가능
    }
  }
  render {
    layout {
      section {
        content {
          cell-card {
            slot1 {
              image {
                shape (Square)
                url ("#{value(controlResult.imageUrl)}") // ✅ JavaScript에서 설정한 로컬 이미지 사용
              }
            }
            slot2 {
              content {
                primary ("✅ #{value(controlResult.name)}이(가) #{value(controlResult.statusMessage)}")
              }
            }
          }
        }
      }
    }
  }
  conversation-drivers {
    conversation-driver {
      template ("전기밥솥 켜줘")
    }
    conversation-driver {
      template ("컴퓨터 본체 켜줘")
    }
    conversation-driver {
      template ("드라이기 꺼줘")
    }
    conversation-driver {
      template ("모니터 꺼줘")
    }
  }
}