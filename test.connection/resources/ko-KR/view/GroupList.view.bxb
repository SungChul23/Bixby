result-view {
  match: GroupListResult (groupResult)

  message {
    template ("#{value(groupResult.messageTitle)}") {
      speech ("#{value(groupResult.messageTitle)}")
    }
  }

  render {
    layout {
      section {
        content {
          for-each (groupResult.messages) {
            as (messageItem) {
              title-card {
                title-area {
                  slot1 {
                    paragraph {
                      style (Title_M)
                      value ("#{value(messageItem)}")
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }

  conversation-drivers {
    if (!groupResult.success) {
      conversation-driver {
        template ("🔓 깜빡 세션 유지!") {
          speech ("세션을 유지합니다.")
        }
      }


      if (groupResult.messageTitle == "현재 등록된 그룹이 없습니다.") {
        conversation-driver {
          template ("📱 깜빡 앱 열기!") {
            speech ("깜빡 앱을 실행합니다.")
          }
        }
      }
    }
  }
}